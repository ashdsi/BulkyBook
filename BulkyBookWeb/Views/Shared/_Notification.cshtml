
@if(TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>    //when using toaster you also need jquery reference
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>    //toastr js
    //run inside java script
    //toaster commands can be found at github link
    <script type="text/javascript">
            toastr.success('@TempData["success"]');       
    </script>

}
@if(TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>    //when using toaster you also need jquery reference
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>    //toastr js
    <script type="text/javascript">
            toastr.error('@TempData["error"]');       
    </script>
}