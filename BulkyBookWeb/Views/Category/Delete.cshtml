@model Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />             <!--need to add this since the fileds are disabled, only Id we require as input when submitting form-->
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"> </div>
        <div class="mb-3">
            <label asp-for="Name"> </label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-6">
            <label asp-for="DisplayOrder"> </label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <hr />
        <button type="submit" class="btn btn-danger" style="width:150px"> Delete</button>
    </div> 
</form>

<!--Enable Client side Validation scripts-->
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />

    }

}